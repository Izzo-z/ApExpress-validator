<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cadastro</title>
  <link rel="stylesheet" href="/css/cadastro-comum.css" />
  <link rel="stylesheet" href="/css/validation.css" />
<style>
    .field-error {
        color: #c62828;
        font-size: 12px;
        margin-top: 6px;
        display: block;
    }

    input.invalid, select.invalid {
        border-color: #c62828 !important;
        box-shadow: 0 0 0 3px rgba(198, 40, 40, 0.06);
    }

    ul.error-list {
        list-style: none;
        padding: 8px 12px;
        background: #fff0f0;
        border: 1px solid #ffd0d0;
        border-radius: 8px;
        color: #c62828;
        margin-bottom: 16px;
    }

    ul.error-list li {
        margin: 4px 0;
    }
    
    .input-error {
        border-color: #c62828 !important;
    }
</style>
</head>

<body>

  <header>
    <%- include('../partials/menu') %>
  </header>

  <main class="cad-container">
    <h1 class="cadastro" style="display: block !important; visibility: visible !important; color: #160B5D !important; font-size: 34px !important; text-align: center !important; margin: 20px 0 !important; font-weight: 600 !important; font-family: 'Poppins', sans-serif !important;">Cadastro</h1>

    <form id="empresaForm2" class="cad-form" action="/cadastro-empresa2" method="POST" novalidate>
      <ol class="form-steps" aria-hidden="true">
        <li><span class="step active">1</span><span class="step-label">Empresa</span></li>
        <li><span class="step active">2</span><span class="step-label">Representante<br/>responsável</span></li>
        <li><span class="step">3</span><span class="step-label">Eixo de<br/>atuação</span></li>
      </ol>

      <section class="form-section">
        <p>Digite os dados da sua empresa para se cadastrar</p>

        <% if (locals.errors && errors.length > 0) { %>
          <article class="error-container">
            <ul class="error-list">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }); %>
            </ul>
          </article>
        <% } %>

        <input type="text" id="nome" name="nome" placeholder="Nome" 
               value="<%= locals.form ? form.nome || '' : '' %>" 
               class="<%= locals.errors && errors.find(e => e.param === 'nome') ? 'input-error' : '' %>" />
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'nome') ? errors.find(e => e.param === 'nome').msg : '' %></span>

        <input type="text" id="cargo" name="cargo" placeholder="Cargo" 
               value="<%= locals.form ? form.cargo || '' : '' %>" 
               class="<%= locals.errors && errors.find(e => e.param === 'cargo') ? 'input-error' : '' %>" />
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'cargo') ? errors.find(e => e.param === 'cargo').msg : '' %></span>

        <input type="email" id="email" name="email" placeholder="Email institucional" 
               value="<%= locals.form ? form.email || '' : '' %>" 
               class="<%= locals.errors && errors.find(e => e.param === 'email') ? 'input-error' : '' %>" />
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'email') ? errors.find(e => e.param === 'email').msg : '' %></span>

        <input type="tel" id="telefone" name="telefone" placeholder="Telefone comercial" 
               value="<%= locals.form ? form.telefone || '' : '' %>" 
               class="<%= locals.errors && errors.find(e => e.param === 'telefone') ? 'input-error' : '' %>" />
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'telefone') ? errors.find(e => e.param === 'telefone').msg : '' %></span>
      </section>
      </form>

      <nav class="actions-section">
        <button type="submit" form="empresaForm2" class="btn-primary">Confirmar</button>
      </nav>
  </main>

  <footer></footer>
  
  <script src="/js/validation.js"></script>
  <script>
  // Inicializar validação para o formulário cadastro-empresa2
  document.addEventListener('DOMContentLoaded', function() {
    const empresaValidator2 = initFormValidation('empresaForm2');
    
    // Função para remover formatação antes do envio
    function digits(value) {
      return (value || '').replace(/\D/g, '');
    }
    
    // Remove formatação do telefone antes do envio
    const form = document.getElementById('empresaForm2');
    if (form) {
      form.addEventListener('submit', function (e) {
        const telefoneInput = form.querySelector('#telefone');
        if (telefoneInput) {
          telefoneInput.value = digits(telefoneInput.value);
        }
      }, { capture: true });
    }
  });
  </script>

</body>
</html>