<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Cadastro</title>
  <link rel="stylesheet" href="/css/cadastro-empresa2.css" />
  <link rel="stylesheet" href="/css/validation.css" />  
<style>
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100900;1,100900&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100900;1,100900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
    @import url('https://fonts.googleapis.com/css2?family=Albert+Sans:ital,wght@0,100900;1,100900&family=Montserrat:ital,wght@0,100900;1,100900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');
</style>
<style>
    .field-error {
        color: #c62828;
        font-size: 12px;
        margin-top: 6px;
        display: block;
    }

    input.invalid, select.invalid {
        border-color: #c62828 !important;
        box-shadow: 0 0 0 3px rgba(198, 40, 40, 0.06);
    }

    ul.error-list {
        list-style: none;
        padding: 8px 12px;
        background: #fff0f0;
        border: 1px solid #ffd0d0;
        border-radius: 8px;
        color: #c62828;
        margin-bottom: 16px;
    }

    ul.error-list li {
        margin: 4px 0;
    }
    
    .input-error {
        border-color: #c62828 !important;
    }
</style>
</head>

<body>

  <header>
    <%- include('../partials/menuempresa') %>
  </header>

  <main class="cad-container">
    <h1 class="cadastro">Cadastro</h1>

    <form class="cad-form" action="/cadastro-empresa2" method="POST" novalidate>
      <ol class="form-steps" aria-hidden="true">
        <li><span class="step active">1</span><span class="step-label">Empresa</span></li>
        <li><span class="step active">2</span><span class="step-label">Representante<br/>responsável</span></li>
        <li><span class="step">3</span><span class="step-label">Eixo de<br/>atuação</span></li>
      </ol>

      <section class="form-section">
        <p>Digite os dados da sua empresa para se cadastrar</p>

        <% if (locals.errors && errors.length > 0) { %>
          <div class="error-container">
            <ul class="error-list">
              <% errors.forEach(error => { %>
                <li><%= error.msg %></li>
              <% }); %>
            </ul>
          </div>
        <% } %>

        <label style="margin-top:10px; font-size:0.85rem; color:#666" for="nome" class="sr-only"></label>
        <input class="form-input <%= locals.errors && errors.find(e => e.param === 'nome') ? 'input-error' : '' %>" 
          type="text" id="nome" name="nome" placeholder="Nome" 
          value="<%= locals.form ? form.nome || '' : '' %>">
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'nome') ? errors.find(e => e.param === 'nome').msg : '' %></span>

        <label style="margin-top:10px; font-size:0.85rem; color:#666" for="cargo" class="sr-only"></label>
        <input class="form-input <%= locals.errors && errors.find(e => e.param === 'cargo') ? 'input-error' : '' %>" 
          type="text" id="cargo" name="cargo" placeholder="Cargo" 
          value="<%= locals.form ? form.cargo || '' : '' %>">
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'cargo') ? errors.find(e => e.param === 'cargo').msg : '' %></span>

        <label style="margin-top:10px; font-size:0.85rem; color:#666" for="email" class="sr-only"></label>
        <input class="form-input <%= locals.errors && errors.find(e => e.param === 'email') ? 'input-error' : '' %>" 
          type="email" id="email" name="email" placeholder="Email institucional" 
          value="<%= locals.form ? form.email || '' : '' %>">
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'email') ? errors.find(e => e.param === 'email').msg : '' %></span>

        <label style="margin-top:10px; font-size:0.85rem; color:#666" for="telefone" class="sr-only"></label>
        <input class="form-input <%= locals.errors && errors.find(e => e.param === 'telefone') ? 'input-error' : '' %>" 
          type="tel" id="telefone" name="telefone" placeholder="Telefone comercial" 
          value="<%= locals.form ? form.telefone || '' : '' %>">
        <span class="field-error"><%= locals.errors && errors.find(e => e.param === 'telefone') ? errors.find(e => e.param === 'telefone').msg : '' %></span>
      </section>

      <br>
        <button type="submit" class="btn-primary">Confirmar</button>
      </form>
  </main>

  <footer></footer>
  
  <!-- jQuery from CDN and our validation script -->
  <script src="/js/validation.js"></script>
  <script src="/js/script.js"></script>
  <script>
  // Inicializar validação para o formulário cadastro-empresa2
  document.addEventListener('DOMContentLoaded', function() {
    // Encontrar o formulário (assumindo que tem um ID)
    const form = document.querySelector('form');
    if (form && !form.id) {
      form.id = 'empresaForm2';
    }
    
    const empresaValidator2 = initFormValidation(form.id || 'empresaForm2');
  });
  </script>

</body>
</html>